/* Pages/playlist/playlist.wxss */

.header {
  height: 550rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  background-color: rgb(99, 92, 92);
  flex-wrap: wrap;
  position: flex;
  top: 0;
  left: 0;
  z-index: 1;
}

.main {
  width: 100%;
  height: 100%;
  background-color: #fff;
  padding-left: 20rpx;
}

.left {
  width: 280rpx;
  height: 280rpx;
  float: left;
  margin: 30rpx;
  position: relative;
  margin-bottom: 10rpx;
}

.left image {
  width: 100%;
  height: 100%;
  position: relative;
}

.left .modal {
  display: flex;
  position: absolute;
  right: 0;
  top: 0;
  color: #fff;
  z-index: 1;
  font-size: 24rpx;
  padding: 8rpx 15rpx 8rpx 40rpx;
  background-image: linear-gradient(90deg, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.2));
  max-width: 70%;
  text-align: right;
  min-width: 30%;
}

.modal image {
  width: 20rpx;
  height: 27rpx;
  margin-right: 13rpx;
}

.info {
  position: absolute;
  z-index: 3;
  right: 10rpx;
  bottom: 10rpx;
}

.info  image {
  width: 50rpx;
  height: 47rpx;
  margin-right: 13rpx;
}

.right {
  width: 400rpx;
  height: 270rpx;
  margin-top: 75rpx;
}

.title {
  font-size: 37rpx;
  color: #fff;
  display: block;
  padding: 0 0 40rpx 0;
}

.center {
  line-height: 30rpx;
  display: block;
}

.title_name {
  vertical-align: middle;
  font-size: 25rpx;
  color: #fff;
}

.title_active {
  vertical-align: middle;
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}

.icn {
  vertical-align: middle;
  width: 25rpx;
  height: 25rpx;
  margin-left: 10rpx;
}

.all {
  display: flex;
  height: 70rpx;
  line-height: 50rpx;
  padding: 15rpx;
}

.playall {
  width: 40rpx;
  height: 40rpx;
  padding: 20prx 30rpx;
  margin-right: 15rpx;
  margin-top: 15rpx;
}

.text {
  border-bottom: 1rpx solid #e1e2e3;
  display: block;
  width: 100%;
  padding-bottom: 15prx;
}

.all_text {
  font-size: 35rpx;
}

.explain {
  font-size: 28rpx;
  color: #999;
}

.song {
  display: flex;
  /* align-items: center; */
}

.song .text .main {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  border-bottom: 1rpx solid #e1e2e3;
  width: 80%;
}

.song .all {
  color: #999;
}

.song .text .top  .explain {
  overflow: hidden;
  text-overflow: ellipsis;
}

.top {
  word-break: keep-all;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.6;
  width: 100%;
  word-wrap: break-word;
}

.song .text .bottom {
  font-size: 28rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: keep-all;
  white-space: nowrap;
  line-height: 1.6;
  width: 100%;
  word-wrap: break-word;
  padding-bottom: 10rpx;
}

.gomv image {
  width: 70rpx;
  height: 70rpx;
  margin-right: 25rpx;
}

.song .text {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.count {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  width: 100%;
}

.count .count_item {
  width: 33.3333333%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
  font-size: 30rpx;
  color: #fff;
}

.count .count_item  image {
  display: block;
  /* width: 190rpx;
   */
   width:100%;
  height: 160rpx;
}
.count .count_item  text {
  display: block;
}
