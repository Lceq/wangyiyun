/* Pages/mv/mv.wxss */

.viedo {
  width: 100%;
  height: 380rpx;
  background-color: #000;
}

.tabs {
  display: flex;
  justify-content: space-around;
  padding-top: 15rpx;
}

.tabs_item {
  font-size: 35rpx;
  height: 70rpx;
}

.active {
  border-bottom: 1px solid #ed4014;
  color: #ed4014;
}

.details {
  height: 100%;
  background-color: #fff;
  font-size: 32rpx;
  /* display: flex; */
  flex-wrap: wrap;
}

.details text {
  display: block;
}

.info {
  padding: 24rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
  border-bottom: 1px solid #eee;
}

.des {
  padding: 24rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.8;
}

#main {
  /* height: 100%; */
  background-color: #fff;
  /* height: 500rpx; */
}

.mvs {
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #eee;
}

.cover {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
  position: relative;
}

.cover image {
  width: 100%;
  height: 100%;
}

.introduce {
  margin-top: 20rpx;
}

.introduce .name {
  font-size: 37rpx;
  display: block;
  overflow: hidden;
  max-height: 50rpx;
  width: 80%;
  text-overflow: ellipsis;
}

.artistName {
  font-size: 25rpx;
  color: #999;
}

.modal {
  display: flex;
  position: absolute;
  right: 0;
  top: 0;
  color: #fff;
  z-index: 1;
  font-size: 24rpx;
  padding: 8rpx 15rpx 8rpx 40rpx;
  background-image: linear-gradient(90deg, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.2));
  max-width: 70%;
  text-align: right;
  min-width: 30%;
}

.modal image {
  width: 20rpx;
  height: 27rpx;
  margin-right: 13rpx;
}

.comment {
  display: flex;
  padding: 20rpx 30rpx;
align-items: center;

}

.artisHead {
  width: 134rpx;
  height: 100rpx;
}

.artisHead  image {
  width: 100%;
  height: 100%;
  border-radius: 50%;

}

.com_info {
  display: flex;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #eee;
  flex-wrap: wrap;
  align-content: center;
  
}

.com_time {
  display: flex;
justify-content: space-between;
  flex-wrap: wrap;
  color: #999;
  width: 100%;
  margin-bottom: 20rpx;

}

.com_name {
  font-size: 38rpx;
}

.time {
  font-size: 30rpx;
display: block;

}
.save  image{
  width: 65rpx;
  height: 65rpx;
  margin-bottom: -10rpx;
margin-left: 10rpx;

}
